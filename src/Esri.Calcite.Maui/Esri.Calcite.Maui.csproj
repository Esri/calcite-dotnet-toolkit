<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0</TargetFrameworks>
        <UseMaui>true</UseMaui>
        <SingleProject>true</SingleProject>
        <ImplicitUsings>enable</ImplicitUsings>
        <Description>$(Description) for .NET MAUI</Description>
        <SkipValidateMauiImplicitPackageReferences>true</SkipValidateMauiImplicitPackageReferences>
    </PropertyGroup>

    <ItemGroup>    
      <MauiFont Include="..\..\.Generated\*.ttf" Link="Resources\Fonts\%(Filename)%(Extension)" />
      <Compile Include="..\..\.Generated\Maui\*.cs" Link=".generated\%(RecursiveDir)%(Filename)%(Extension)" />
      <None Include="README.txt" Pack="True" PackagePath="\" />

        <MauiXaml Include="..\..\.Generated\Maui\Icons\*.xaml">
        <Generator>MSBuild:Compile</Generator>
        <Link>Resources\Icons\%(Filename).xaml</Link>
      </MauiXaml>
        <MauiXaml Include="..\..\.Generated\Maui\Colors\*.xaml">
            <Generator>MSBuild:Compile</Generator>
            <Link>Resources\Colors\%(Filename).xaml</Link>
        </MauiXaml>

      <MauiXaml Update="Resources\Styles\Brushes.xaml">
        <Generator>MSBuild:Compile</Generator>
      </MauiXaml>
    </ItemGroup>

    <Target Name="GenerateResources" BeforeTargets="PreBuildEvent" Condition="!Exists('$(MSBuildThisFileDirectory)..\..\.Generated\Maui\Icons\Glyphs.xaml') ">
        <Exec Command="dotnet run --project $(MSBuildThisFileDirectory)..\..\Tools\ResourceGenerator\ResourceGenerator.csproj $(MSBuildThisFileDirectory)..\..\calcite-ui-icons\docs\icons.json  $(MSBuildThisFileDirectory)..\..\Tools\calcite-ui-icons-codepoints.json $(MSBuildThisFileDirectory)..\..\calcite-colors\dist\colors.scss $(MSBuildThisFileDirector)..\..\.Generated\Maui\ Maui" />
    </Target>

</Project>

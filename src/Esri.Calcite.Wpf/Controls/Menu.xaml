<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ca="clr-namespace:Esri.Calcite.WPF.Helpers"
    xmlns:cm="clr-namespace:Esri.Calcite.WPF.Helpers"
    xmlns:c="clr-namespace:Esri.Calcite.WPF">

    <Style x:Key="CalciteMenuStyle" TargetType="Menu">
        <Setter Property="Background" Value="{DynamicResource CalciteBackground2Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource CalciteText1Brush}" />
    </Style>
    <Style x:Key="CalciteMenuItemStyle" TargetType="MenuItem">
        <Setter Property="Background" Value="{DynamicResource CalciteBackground2Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource CalciteBackground2Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource CalciteText1Brush}" />
    </Style>
</ResourceDictionary>